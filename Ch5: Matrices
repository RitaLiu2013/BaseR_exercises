## 5.10
elementary_matrix <- matrix(1:15, nrow=3, ncol=5)
elementary_matrix
elementary_matrix[3,]
elementary_matrix[3,] <- elementary_matrix[3,]-2*elementary_matrix[1,]
elementary_matrix



